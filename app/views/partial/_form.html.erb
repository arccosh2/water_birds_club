<div class="form-wrapper">
  <%= form_with(model: @user, local: true) do |f| %>
    <div class="form-item">
      <%= f.label :username %>
      <%= f.text_field :username, class: "input", placeholder: "ユーザー名" %>
    </div>
    <div class="form-item">
      <%= f.label :email %>
      <%= f.email_field :email, class: "input", placeholder: "メールアドレス" %>
    </div>
    <div class="form-item">
      <%= f.label :password %>
      <%= f.password_field :password, class: "input", placeholder: "パスワード" %>
    </div>
    <div class="form-item">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input", placeholder: "パスワードの確認" %>
    </div>
    <div class="button-panel">
      <%= f.submit(@user.new_record? ? "sign up" : "update account", class: "btn-sub")%>
    </div>
   <% end %>
  <div class="form-footer">
    <% if logged_in? %>
      <p><%= link_to "ログアウトする", logout_path,  method: :delete %></p>
      <p><%= link_to "Topに戻る", root_path %></p>
      <p><%= link_to "アカウントを削除する", user_path(current_user), method: :delete, data: { confirm: "アカウントを削除しますか？" } %></p>
    <% else %>
      <p><%= link_to "アカウントをお持ちですか？", login_path %></p>
      <p><%= link_to "Topに戻る", root_path %></p>
    <% end %>
  </div>
</div>

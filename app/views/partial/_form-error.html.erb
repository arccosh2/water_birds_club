<% if @user.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show content-width" role="alert">
    <p class="font-md">アカウントの作成に失敗しました</p>
    <ul>
      <% @user.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
